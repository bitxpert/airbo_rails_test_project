<table class=<%="#{table_class}"%>>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Amount</th>
      <th>Created</th>
    </tr>
  </thead>
  <tbody>
    <% charges.each do |charge| %>
      <tr>
        <td><%= charge.customer.full_name %></td>
        <td><%= number_to_currency charge.amount_in_dollars %></td>
        <td><%= charge.created %></td>
      </tr>
    <% end %>
  </tbody>
</table>